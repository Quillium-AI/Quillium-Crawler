# API Configuration
API_PORT=8080                   # Port for the API server
ADMIN_API_KEY=quillium-admin-key  # Secret key for authenticated API endpoints
ALLOW_CORS=true                # Whether to enable CORS for the API

# Crawler Configuration
CRAWLER_ALLOWED_DOMAINS=quilliumtest.com,quilliumexample.com  # Comma-separated list of domains to crawl
CRAWLER_MAX_DEPTH=3           # Maximum depth to crawl from the starting URL
CRAWLER_THREAD_COUNT=2        # Number of concurrent threads for queue processing
CRAWLER_MAX_QUEUE_SIZE=10000  # Maximum number of URLs to queue
CRAWLER_PARALLELISM=2         # Number of concurrent requests
CRAWLER_DELAY=1s              # Delay between requests
CRAWLER_RANDOM_DELAY=1s       # Random delay component added to base delay
CRAWLER_START_URLS=https://quilliumtest.com,https://quilliumexample.com  # Starting URLs for the crawler (optional)

# Anti-Bot and Proxy Configuration
ROTATE_USER_AGENT=true        # Whether to rotate between hardcoded user agents
PROXY_URL=http://user:pass@proxyserver:8080  # Proxy URL (optional)

# Indexer Configuration
INDEXER_URL=http://localhost:8081  # URL of the indexer service
INDEXER_API_KEY=your-indexer-api-key  # API key for the indexer service (optional)

# Database Configuration
DB_CONN_STRING=postgres://username:password@localhost:5432/quillium_crawler  # PostgreSQL connection string (optional)
